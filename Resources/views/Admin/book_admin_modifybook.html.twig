<h3>
    <span class="fa fa-edit"></span>
    {{ "Edit/Delete a Book" | trans }}
    {{ pageSetVar('title', 'Edit/Export/Delete Book'|trans) }}
</h3>
<div class="alert alert-info">{{ "Choose a book to Edit, Export, or Delete" | trans }}</div>
{{ showflashes() }}
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'Book' | trans }}</th>
        <th> {{ 'Actions' | trans }} </th>
    </tr>
    </thead>
    <tbody>
    {% for item in books %}
        <tr>
            <td>{{ item.name }} ({{ item.bid }})</td>
            <td class="actions">
                <a href="{{ path('paustianbookmodule_admin_edit') }}/{{ item.bid }}" class="fas fa-edit"></a>
                <a href="{{ path('paustianbookmodule_admin_exportbook') }}/{{ item.bid }}" class="fas fa-download"></a>
                <a href="{{ path('paustianbookmodule_admin_delete') }}/{{ item.bid }}" class="fas fa-trash"
                   onclick="return confirm('Are you sure you want to delete this book?')"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


