{{ pageAddAsset('javascript', zasset('jqueryui/jquery-ui.js')) }}
{{ pageAddAsset('stylesheet', asset('jqueryui/themes/base/jquery-ui.min.css')) }}
{{ pageAddAsset('stylesheet', zasset('@PaustianBookModule:css/forms.css')) }}
<div class="container-fluid">
    {{ showflashes() }}
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'Glossary Term' | trans  }}</th>
                <th>{{ 'Page'| trans }}</th>
                <th> {{ 'Actions' | trans  }} </th></tr>
        </thead>
        <tbody>
            {% for item in glossaryItems %}
                <tr>
                    <td>{{ item.term }}</td>
                    <td><a href="{{ item.url }}" class="fas fa-link"></a></td>
                    <td class="actions">
                        <a href="{{ path('paustianbookmodule_admin_editglossary', {"gloss": item.gid}) }}" class="fas fa-edit" title="{{ 'Edit Glossary Term' | trans  }}"></a>
                        <a href="{{ path('paustianbookmodule_admin_deleteglossary', {"gloss": item.gid}) }}" class="fas fa-trash" title="{{ 'Delete Glossary Term' | trans  }}" onclick="return confirm('Are you sure you want to delete this glossary term?')"></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>    
</div>
