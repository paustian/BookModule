<h3>
    <span class="fa fa-edit"></span>
    {{ "Edit a glossary term" | trans }}
</h3>
<p>{{ "Click on the term to edit" | trans }}</p>
{{ showflashes() }}
<fieldset>
    <ul class="pagination pagination-lg">
        {% for letter in 'a'|upper..'z'|upper %}
            <li><a href="{{ path('paustianbookmodule_admin_modifyglossary') }}/{{ letter }}">{{ letter }}</a></li>
        {% endfor %}
    </ul>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'Term' | trans }}</th>
            <th> {{ 'Actions' | trans }} </th>
        </tr>
        </thead>
        <tbody>
        {% for term in terms %}
            <tr>
                <td>{{ term.term }}</td>
                <td class="actions">
                    <a href="{{ path('paustianbookmodule_admin_editglossary', {gloss: term.gid}) }}"
                       class="fas fa-edit"></a>
                    <a href="{{ path('paustianbookmodule_admin_deleteglossary', {gloss: term.gid}) }}" class="fas fa-trash"
                       onclick="return confirm('Are you sure you want to delete this glossary term?')"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</fieldset>

